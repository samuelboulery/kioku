<div style="background-image: url('<%= image_path "banner.svg" %>');" class="banner">
  <h1>School's Dashboard</h1>
  <div class="search">
    <%= form_tag(professional_schools_path, method: "get") do %>
    <%= text_field_tag :name, params[:name], class:"w-1/2 rounded-bl-md rounded-tl-md h-10" %>
    <%= submit_tag "Search", class:"w-24 rounded-br-md rounded-tr-md h-10" %>
    <% end %>
  </div>
</div>


<div class="flex">
  <div class="w-2/12 py-12">
    <div class="flex text-center">
      <div>
        <p class="pb-2 text-lg">Enter an email to invite a school</p>
        <%= form_for(:school, url: professional_schools_invite_path) do |f| %>
          <%= f.text_field :email, class:'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-5/6 py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple mb-5', placeholder: "School mail"%>
          <%= f.button 'Send an invitation', class:'btn btn-pink text-xl mb-16' %>
        <% end %>
      </div>
    </div>
    <div class="filterscheckbox">
      <div class="flex text-center ml-8">
        <p class="font-bold pb-5 text-xl">School types</p>
      </div>
      <label class="flex text-center ml-8">
        <div class="bg-white border-2 rounded border-gray-400 w-6 h-6 flex flex-shrink-0 justify-center items-center mr-2 focus-within:border-blue-500">
          <input type="checkbox" checked class="opacity-0 absolute" data-category='nursery'>
          <svg class="fill-current hidden w-4 h-4 text-green-500 pointer-events-none" viewBox="0 0 20 20"><path d="M0 11l2-2 5 5L18 3l2 2L7 18z"/></svg>
        </div>
        <div class="select-none pb-3">Nursery school</div>
      </label>

      <style>
        input:checked + svg {
          display: block;
        }
      </style>
      <label class="flex text-center ml-8">
        <div class="bg-white border-2 rounded border-gray-400 w-6 h-6 flex flex-shrink-0 justify-center items-center mr-2 focus-within:border-blue-500">
          <input type="checkbox" checked class="opacity-0 absolute" data-category='elementary'>
          <svg class="fill-current hidden w-4 h-4 text-green-500 pointer-events-none" viewBox="0 0 20 20"><path d="M0 11l2-2 5 5L18 3l2 2L7 18z"/></svg>
         </div>
         <div class="select-none pb-3">Elementary school</div>
      </label>

      <style>
        input:checked + svg {
          display: block;
        }
      </style>
      <label class="flex text-center ml-8">
        <div class="bg-white border-2 rounded border-gray-400 w-6 h-6 flex flex-shrink-0 justify-center items-center mr-2 focus-within:border-blue-500">
          <input type="checkbox" checked class="opacity-0 absolute" data-category='comprehensive'>
          <svg class="fill-current hidden w-4 h-4 text-green-500 pointer-events-none" viewBox="0 0 20 20"><path d="M0 11l2-2 5 5L18 3l2 2L7 18z"/></svg>
         </div>
         <div class="select-none pb-3">Comprehensive school</div>
      </label>

      <style>
        input:checked + svg {
          display: block;
        }
      </style>
    </div>
  </div>

  <div class="w-7/12 py-12 pl-20">
    <% @schools.each do |school| %>
    <div class="w-5/6 card-school" data-category="<%= school.category %>">
      <div class="flex items-center justify-between border-b-2 px-4 py-2">
        <div><img class="w-8" src="https://image.flaticon.com/icons/svg/1523/1523895.svg"></div>
          <p>
          <%= link_to professional_school_path(school.id) do %>
            <div class="font-bold"><%= school.name %></div>
            <div class="text-gray-500"><%= school.address %></div>
          <% end %>
