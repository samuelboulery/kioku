<h1>Editer la classe <%= @classroom.name %></h1>


<%= form_for ([:professional, @classroom]), html: {id: "drag"} do |f| %>
  <%= f.label :name, 'Nom de la classe:' %>
  <%= f.text_field :name %>
  <div class="label">
    <%= f.label :gphoto %>
    <div class="dragndrop-form">
      Cliquer ou déposer la photo de groupe ici
    </div>
    <%= f.file_field :gphoto, direct_upload: true %>
  </div>
  <div class="label">
    <%= f.label :photos %>
    <div class="dragndrop-form">
      Cliquer ou déposer les photos individuelles ici
    </div>
    <%= f.file_field :photos, multiple: true, direct_upload: true %>
  </div>
  <ul id="filename">
  </ul>
  <%= f.submit %>
<% end %>


<%= link_to professional_classroom_path(@classroom) do %>
  <p>Retour</p>
<% end %>
