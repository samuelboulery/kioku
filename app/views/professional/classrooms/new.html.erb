<h1>Ajouter une nouvelle classe</h1>


<%= form_for ([:professional, @school, @classroom]), html: {id: "drag"} do |f| %>
  <%= f.label :name, 'Nom de la classe:' %>
  <%= f.text_field :name , value:'classe'%>
  <p>Photo de groupe</p>
  <div class="label">
    <%= f.label :gphoto %>
    <div class="dragndrop-form">
      <p class="inactive">Cliquer ou déposer la photo de groupe</p>
    </div>
    <%= f.file_field :gphoto, direct_upload: true %>
    <div class="files"></div>
  </div>
  <p>Photos individuelles</p>
  <div class="label">
    <%= f.label :photos %>
    <div class="dragndrop-form">
      <p class="inactive">Cliquer ou déposer les photos individuelles ici</p>
    </div>
    <%= f.file_field :photos, multiple: true, direct_upload: true %>
    <div class="files"></div>
  </div>
  <%= f.submit %>
<% end %>

<%= link_to professional_school_path(@school) do %>
  <p>Retour</p>
  <% end %>
