<h1>Add a new classroom</h1>


<%= form_for ([:professional, @school, @classroom]), html: {id: "drag"} do |f| %>
  <%= f.label :name, 'Classroom Name:' %>
  <%= f.text_field :name , value:'Classroom'%>
  <p>Group Photo</p>
  <div class="label">
    <%= f.label :gphoto %>
    <div class="dragndrop-form">
      <p class="inactive">Click or drop Group picture here</p>
    </div>
    <%= f.file_field :gphoto, direct_upload: true %>
    <div class="files"></div>
  </div>
  <p>Individual Photos</p>
  <div class="label">
    <%= f.label :photos %>
    <div class="dragndrop-form">
      <p class="inactive">Click or drop Individual pictures here</p>
    </div>
    <%= f.file_field :photos, multiple: true, direct_upload: true %>
    <div class="files"></div>
  </div>
  <%= f.submit %>
<% end %>

<%= link_to professional_school_path(@school) do %>
  <p>Back</p>
  <% end %>
