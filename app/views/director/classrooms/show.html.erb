<div class="flex" data-init-student-dnd>
  <div class="w-7/12 py-12">
    <div class="flex justify-between px-24">
      <div class="grid grid-cols-5 gap-4">
        <% @classroom.photos.each do |photo| %>
          <div data-photoid="<%= photo.id %>" class="target flex flex-col rounded overflow-hidden shadow-md">
            <%= cl_image_tag(photo.file.key,
                transformation: [
                  { width: 200, height: 200, crop: "fill" },
                  { overlay: "kioku_watermark_vhbs35", effect: "brightness:20", opacity: 100, width: 0.3 },
                ],
                class: 'object-contain'
              )
            %>
            <div class="relative dnd-placeholder flex justify-center">
              <p class="py-2">Drag n drop here</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="w-2/12 pt-12 mr-20">
    <div class="text-center">
      <%= form_for(:director, url: import_director_classroom_path) do |f| %>
        <label class="relative btn btn-white block mb-4" data-dropzone>
          <span id="files">Drop a CSV file or click</span>
          <%= f.file_field :csv, class: "left-0 top-0 opacity-0 bottom-0 absolute" %>
        </label>
        <%= f.submit 'Save', class: "btn btn-pink px-16" %>
      <% end %>
    </div>

    <div class="max-w-xs rounded-lg overflow-y-auto h-64 shadow mt-16">
      <div id="names" class="px-10 py-6">
        <% @classroom.students.each do |student| %>
          <div class="relative dropable-student" data-studentid="<%= student.id %>">
            <p class="font-bold"><%= student.name %></p>
            <p class="email text-gray-500"><%= student.email %></p>
            <span class="hidden close absolute top-0 bottom-0 right-0 pl-6">
              <svg class="fill-current h-6 w-6 text-red" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="w-2/12">
    <div class="max-w-xs rounded-md overflow-hidden shadow bg-white z-1 mb-16" style="margin-top: -140px">
