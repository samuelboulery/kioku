<h1>Consultation</h1>
<p><%= @student.name %> pictures</p>


  <% if @student.photos.exists? %>
    <% @student.photos.each do |photo| %>
      <% if photo.photo_type %>
        <p>Photo de Groupe</p>
        <%= cl_image_tag photo.file.key, :transformation=>[
          {:width=>248, :height=>165, :crop=>"fill"},
          {:effect=>"pixelate_faces:7"},
          {:overlay=>"kioku_watermark_vhbs35", :effect=>"brightness:40", :opacity=>80, :width=>0.2,}
          ] %>
        <p>Photos Individuelles</p>
      <% else %>
        <%= cl_image_tag photo.file.key, :transformation=>[
          {:width=>165, :height=>248, :crop=>"fill"},
          {:effect=>"pixelate_faces:7"},
          {:overlay=>"kioku_watermark_vhbs35", :effect=>"brightness:40", :opacity=>80, :width=>0.2,}
          ] %>
      <% end %>
    <% end %>
  <% else %>
    <p>There is no picture uploaded yet!</p>
  <% end %>

